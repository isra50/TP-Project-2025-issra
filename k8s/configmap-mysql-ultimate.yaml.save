apiVersion: v1
kind: ConfigMap
metadata:
  name: tp-projet-config
  namespace: tp-projet-2025data:
  application.yml: |
    spring:
      application:
        name: tp-projet-2025
      
      datasource:
        url: jdbc:mysql://mysql-service.tp-projet-2025.svc.cluster.local:3306/tpfoyer?useSSL=false
        username: tpuser
        password: tppassword
        driver-class-name: com.mysql.cj.jdbc.Driver
        hikari:
          connection-timeout: 30000
          maximum-pool-size: 10
      
      jpa:
        hibernate:
          ddl-auto: update
        show-sql: true
      
      # D√©sactiver Spring Security TEMPORAIREMENT pour le TP
      autoconfigure:
        exclude: org.springframework.boot.autoconfigure.security.servlet.SecurityAutoConfiguration
      
      # Cr√©er une page d'accueil simple
      web:
        resources:
          static-locations: classpath:/static/
    
    server:
      port: 8080
      servlet:
        context-path: /
    
    management:
      endpoints:
        web:
          exposure:
            include: "*"
      endpoint:
        health:
          show-details: always
    
    # Page d'accueil HTML simple
    app:
      welcome-message: "TP Projet 2025 - D√©ploiement Kubernetes R√©ussi"
---
